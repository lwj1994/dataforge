<idea-plugin>
    <id>com.melu.dataforge</id>
    <name>DataForge Runner</name>
    <vendor>Melu</vendor>

    <idea-version since-build="251" until-build="252.*"/>

    <description><![CDATA[
        Adds a context menu item to run the dataforge command on Dart files.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">
        <projectActivity implementation="com.melu.dataforge.DataForgePluginStartup"/>
    </extensions>

    <actions>
        <action id="DataForge.RunAction" class="com.melu.dataforge.DataForgeAction"
                text="Run DataForge"
                description="Run the dataforge command on the selected Dart file."
                icon="/icons/dart.svg">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt D"/>
        </action>
    </actions>
</idea-plugin>